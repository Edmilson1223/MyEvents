<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".CriarEventoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:id="@+id/voltar"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arya"
            android:text="Criar evento"
            android:textAllCaps="true"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Seu conteúdo aqui -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/arya_bold"
            android:text="Criar Evento"
            android:textSize="30sp" />

        <!-- Formulario -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arya"
                android:text="Nome do evento"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_nome_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_inputs"
                android:fontFamily="@font/arya"
                android:hint="ex: Summer Party"
                android:padding="15dp"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/arya"
                android:text="Cartaz"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/upload_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/ic_launcher" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_upload_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#7565BF"
                    android:drawableStart="@drawable/baseline_add_a_photo"
                    android:fontFamily="@font/arya"
                    android:padding="15dp"
                    android:text="      Selecionar imagem"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/arya"
                android:text="Nome do evento"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_detalhe_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_inputs"
                android:fontFamily="@font/arya"
                android:hint="ex: Descrição do evento"
                android:padding="15dp"
                android:textSize="15sp" />

            <!--                       -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/arya"
                android:text="Hora do evento"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#7565BF"
                android:drawableStart="@drawable/baseline_timer_24"
                android:padding="15dp"
                android:text="   Selecionar hora"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arya"
                android:text="23:00" />

            <!--                        -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/arya"
                android:text="Data do evento"
                android:textSize="18sp"
                android:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_data_inico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Selecionar data"
                android:background="#7565BF"
                android:padding="15dp"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_data_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17/01/2024" />

            <!--                        -->


            <Button
                android:id="@+id/btn_criar_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#7565BF"
                android:padding="15dp"
                android:text="Criar evento"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>